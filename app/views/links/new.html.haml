%br
= form_for(@link) do |f| 
	- if @link.errors.any? 
		#error_explanation
			%h2= pluralize(@link.errors.count, "error") + "prohibited this link from being saved:"
			%ul
				-	@link.errors.full_messages.each do |msg| 
					%li= msg

	.field
		= f.label :url 
		%br
		= f.text_field :url 

	.field
		= f.label :title
		%br
		= f.text_area :title

	.field
		= f.label :thumbnail
		%br
		= f.text_field :thumbnail

	.actions= f.submit 

